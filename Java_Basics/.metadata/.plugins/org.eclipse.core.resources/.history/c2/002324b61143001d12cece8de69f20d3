package com.functional.interfaces;

import java.util.function.Predicate;
import java.util.*;
public class Challenge1 {
	public static void main(String[] args) {
		int tester=5;
		Predicate<Integer> odd = (a)-> {
			if(a%2==0)
				return false;
			else return true;
		};
		System.out.println("test odd: "+odd.test(tester));
		
		Predicate<Integer> prime = (a)-> {
			if(a<2|| a%2==0)
				return false;
			if(a==2)
				return true;
			else {
				for(int i=3; i<a;i++) {
					if(a%i==0)
						return false;
				}
				return true;
			}
		};
		System.out.println("test prime: "+prime.test(tester));
		
		Predicate<Integer> palin = (a)-> {
			String str= a.toString(a);
			StringBuilder sb = new StringBuilder(str);
			sb.reverse();
			String reverse=sb.toString();
			if (str.equals(reverse))
				return true;
			else return false;
		};
		System.out.println("test palindrome: "+palin.test(tester));
		
		
	}
}
